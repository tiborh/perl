#!/usr/bin/perl -w

use strict;

my $wlth = 0;
my $nuofwds = 10;

for (my $i=0;$i<$nuofWds;$i++) {
    wlth = ++int(rand(13));
    printf("%s\n",&gen_word($_));
}

sub gen_word {
    my $gword = "";
    for (my $i = 0; $i < $_[0]; $i++) {
    $gword .= sprintf("%c",97+int(rand(26)));
    }
    return $gword;
}
